<%= form_for(@client) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
 <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :buyer %><br />
    <%= f.text_field :buyer %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_area :address, :rows=>4, :cols=>40 %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :comments %><br />
    <%= f.text_area :comments, :rows=>4, :cols=>40 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
