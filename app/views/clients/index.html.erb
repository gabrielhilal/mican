<h1>Listing clients</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Buyer</th>
    <th>Phone</th>
    <th>Email</th>
    <td></td>
    <td></td>
  </tr>

<% @clients.each do |client| %>
  <tr>
    <td><%= link_to client.name, client  %></td>
    <td><%= client.buyer %></td>
    <td><%= client.phone %></td>
    <td><%= client.email %></td>
    <td><%= link_to 'edit', edit_client_path(client) %></td>
    <td><%= link_to 'delete', client, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

